// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Project {
  id           String     @id @default(uuid())
  name         String
  createAt     DateTime   @default(now())
  updateAt     DateTime   @updatedAt
  ownerId      String
  description  String
  meetLocation String
  meetType     String
  posts        Post[]
  requests     Requests[]
  members      User[]     @relation("Member")
  requestants  User[]     @relation("Requestant")
}

model User {
  id        String    @id @default(uuid())
  requested Project[] @relation("Requestant")
  member    Project[] @relation("Member")
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])

  @@index([projectId])
}

model Requests {
  id        String   @id @default(uuid())
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  userId    String

  @@index([projectId])
}
